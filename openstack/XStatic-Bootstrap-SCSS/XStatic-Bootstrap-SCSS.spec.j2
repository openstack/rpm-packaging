%global sname XStatic-Bootstrap-SCSS
Name:           {{ py2name('XStatic-Bootstrap-SCSS') }}
Version:        3.3.7.1
Release:        0
Summary:        Bootstrap-SCSS %{version} (XStatic packaging standard)
License:        {{ license('MIT') }}
Group:          Development/Languages/Python
Url:            https://git.openstack.org/cgit/openstack/{sname}/
Source0:        https://pypi.io/packages/source/X/%{sname}/%{sname}-%{version}.tar.gz
BuildRequires:  openstack-macros
BuildRequires:  {{ py2pkg('devel') }}
BuildRequires:  {{ py2pkg('setuptools') }}
Requires:       {{ py2pkg('XStatic') }}
BuildArch:      noarch

%description
Bootstrap style library packaged for setuptools (easy_install) / pip.

%prep
%autosetup -n %{sname}-%{version}
%py_req_cleanup

%build
%{py2_build}

%install
%{py2_install}

%files
%doc README.txt
%{python2_sitelib}/xstatic
%{python2_sitelib}/XStatic_Bootstrap_SCSS-%{version}-py?.?.egg-info
%{python2_sitelib}/XStatic_Bootstrap_SCSS-%{version}-py?.?-nspkg.pth

%changelog
